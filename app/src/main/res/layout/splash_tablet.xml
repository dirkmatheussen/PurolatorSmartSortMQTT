<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/splash_gradient"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/flashView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/start_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="122dp"
        android:src="@drawable/logo_purolator" />

    <Button
        android:id="@+id/start_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="126dp"
        android:background="@color/orange"
        android:padding="10dp"
        android:text="Start smartsort"
        android:textColor="@color/darkblue"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/splashViewTablet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/start_btn"
        android:layout_alignLeft="@+id/start_btn"
        android:layout_alignRight="@+id/start_btn"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="false"
        android:layout_marginBottom="81dp"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="Welcome"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/darkblue" />

    <TextView
        android:id="@+id/scanInstructie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="59dp"
        android:gravity="center_horizontal"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    <TextView
        android:id="@+id/serialViewTablet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Serial: "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/darkblue"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="true" />

</RelativeLayout>